<h1>Users</h1>

<div class="page-actions">
  <%= link_to "New User", new_user_path, class: "btn" %>
</div>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Email</th>
      <th>Name</th>
      <th>Provider</th>
      <th>UID</th>
      <th>Role</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr id="<%= dom_id(user) %>">
        <td><%= user.id %></td>
        <td><%= mail_to user.email %></td>
        <td><%= user.name %></td>
        <td><%= user.provider %></td>
        <td><%= user.uid %></td>
        <td><%= user.role %></td>
        <% if current_user&.sysadmin? %>
        <td class="actions">
          <div class="actions-row">
            <%= link_to "Show", user_path(user), class: "btn" %>
            <%= link_to "Edit", edit_user_path(user), class: "btn" %>
            <%= button_to "Delete", user_path(user), method: :delete, data: { confirm: "Delete this user?" }, class: "btn btn-danger" %>
          </div>
        </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
